<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>2.1.1.1001</Version>
    <Authors>Brecht Baekelandt</Authors>
    <Company>Avassy</Company>
    <NeutralLanguage />
    <AssemblyVersion>2.1.1.1001</AssemblyVersion>
    <FileVersion>2.1.1.1001</FileVersion>
    <Description>IHtmlHelper extension for Google's invisible reCaptcha.</Description>
    <PackageLicenseUrl>http://opensource.org/licenses/MS-PL</PackageLicenseUrl>
    <PackageProjectUrl></PackageProjectUrl>
    <RepositoryUrl>https://github.com/AvassySolutions/AvassyFramework/tree/master/Avassy.AspNetCore.Mvc.InvisibleReCaptcha</RepositoryUrl>
    <PackageTags>IHtmlHelper invisible reCaptcha Google</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Helpers\**" />
    <Compile Remove="Services\**" />
    <EmbeddedResource Remove="Helpers\**" />
    <EmbeddedResource Remove="Services\**" />
    <None Remove="Helpers\**" />
    <None Remove="Services\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.1.0" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System">
      <HintPath>System</HintPath>
    </Reference>
  </ItemGroup>

</Project>
