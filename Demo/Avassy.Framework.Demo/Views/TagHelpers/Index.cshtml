        <script type="text/javascript" asp-minified-script>
            function initialize() {
                // Ask for rows
                var rows = prompt("How many rows for your multiplication table?");

                // Ask for columns
                var columns = prompt("How many columns for your multiplication table?");

                // Set default rows
